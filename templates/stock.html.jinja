{% extends "layout.html.jinja" %} 
{# TODO: Fill the gaps in the chart / @home #}
{% block body %}
<h4>Current Price: ${{price}}</h4>
<h4>{{stock}}</h4>
<br>


<script>
window.onload = function () {
  var dataPoints1 = [], dataPoints2 = [], dataPoints3 = [];
  var data = {{data| safe}}
  var stockChart = new CanvasJS.StockChart("chartContainer",{
    theme: "light1",
    charts: [{
      toolTip: {
        shared: true
      },
      axisX: {
        lineThickness: 5,
        tickLength: 0,
        labelFormatter: function(e) {
          return "";
        }
      },
      axisY: {
        prefix: "$"
      },
      legend: {
        verticalAlign: "top"
      },
      data: [{
        showInLegend: true,
        name: "Stock Price (in USD)",
        yValueFormatString: "$#,###.##",
        type: "candlestick",
        dataPoints : dataPoints1
      }]
    }],
    rangeSelector: {
      enabled: false
    },
    navigator: {
      data: [{
        dataPoints: dataPoints3
      }]
    }
  });
    for(var i = 0; i < data.length; i++){
      dataPoints1.push({label: data[i].date, y: [Number(data[i].open), Number(data[i].high), Number(data[i].low), Number(data[i].close)]});
      dataPoints3.push({label: data[i].date, y: Number(data[i].close)});
    }
    stockChart.render();
  
}
</script>
    

<div id="chartContainer" style="height: 450px; width: 100%;"></div>

{% endblock %}